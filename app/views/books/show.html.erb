<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
     <%= render 'users/user_info', user: @user %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <% if @book.user.profile_image.attached? %>
                  <%= link_to user_path(@book.user_id) do %>
                    <%= image_tag @book.user.profile_image, size: "100x100" %><br>
                    <%= @book.user.name %>
                  <% end %>
                <% else %>
                  <%= link_to user_path(@book.user_id) do %>
                    <%= image_tag 'no-icon', size: "40x40" %><br>
                    <%= @book.user.name %>
                  <% end %>
                <% end %>
              </td>
              <td><%=link_to @book.title, book_path(@book.id) %></td>
              <td><%=@book.body %></td>
              <% if @book.user.id == current_user.id %>
              <td><%=button_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
              <td><%=button_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %></td>
             
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
