<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <% if @book_of.user.profile_image.attached? %>
        <%= image_tag @book_of.user.profile_image, size: "100x100", class: "attachment user profile_image fallback" %>
        <% else %>
        <%= image_tag 'no-image', class: "attachment user profile_image fallback" %>
        <% end %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%=@book_of.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%=@book_of.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to user_path(current_user.id) ,class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        
          <%= form_with model: @book do |f| %>
          
          <div class="form-group">
             <label for="book_title">Title</label>
             <%= f.text_field :title, class: "form-control book_title" %>
          </div>
          
          <div class="form-group">
             <label for="book_opinion">Opinion</label>
             <%= f.text_area :body, class: "form-control book_title" %>
          </div>
          
          <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-success" %>
         </div>
          
          <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <% if @book_of.user.profile_image.attached? %>
                  <%= link_to user_path(@book_of.user_id) do %>
                    <%= image_tag @book_of.user.profile_image, size: "100x100" %><br>
                    <%= @book_of.user.name %>
                  <% end %>
                <% else %>
                  <%= link_to user_path(@book_of.user_id) do %>
                    <%= image_tag 'no-icon', size: "40x40" %><br>
                    <%= @book_of.user.name %>
                  <% end %>
                <% end %>
              </td>
              <td><%=link_to @book_of.title, book_path(@book_of.id) %></td>
              <td><%=@book_of.body %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
